<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2 mb-3">
    <form
      action="/listings/<%= listing._id%>?_method=PUT"
      method="post"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          class="form-control"
          name="listing[title]"
          value="<%=listing.title %>"
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
      </div>
      
       <div class="mb-3">
          <label class="form-label">Category</label>
          <select name="listing[category]" class="form-select" required>
            <option value="">Select category</option>
            <option value="Rooms">Rooms</option>
            <option value="Trending">Trending</option>
            <option value="Iconic Cities">Iconic Cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Camping">Camping</option>
            <option value="Castle">Castle</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
          </select>
        </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          class="form-control"
          required
        >
<%=listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter the description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">image link/URL</label>
        <input
          type="file"
          id="image"
          class="form-control"
          name="listing[image]"
        />
        <div class="invalid-feedback">Please enter valid image URL</div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              id="price"
              class="form-control"
              name="listing[price]"
              value="<%=listing.price%>"
              required
            />
            <div class="invalid-feedback">Please price should be valid.</div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              id="location"
              class="form-control"
              name="listing[location]"
              value="<%=listing.location %>"
              required
            />
            <div class="invalid-feedback">location should be valid</div>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          id="country"
          class="form-control"
          name="listing[country]"
          value="<%=listing.country %>"
          required
        />
        <div class="invalid-feedback">country name shoudl be valid</div>
      </div>
      <button class="btn form-edit-btn">Edit</button>
    </form>
  </div>
</div>
<script src="/js/index.js"></script>
