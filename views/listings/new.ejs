<% layout('/layouts/boilerplate') -%>
  <div class="row">
    <div class="col-8 offset-2 mb-3">
      <h3>Create new listing</h3>
      <form
        action="/listings"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Enter Title</label>
          <input
            type="text"
            id="title"
            class="form-control"
            name="listing[title]"
            placeholder="Add a catchy title"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Category</label>
          <select name="listing[category]" class="form-select" required>
            <option value="">Select category</option>
            <option value="Rooms">Rooms</option>
            <option value="Trending">Trending</option>
            <option value="Cities">Iconic Cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Pool">Amazing Pools</option>
            <option value="Camping">Camping</option>
            <option value="Castles">Castles</option>
            <option value="Farm">Farms</option>
            <option value="Arctic">Arctic</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            id="description"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please enter the short description.
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image Link/URL</label>
          <input
            type="file"
            id="image"
            class="form-control"
            name="listing[image]"
            accept="image/*"
          />
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input
                id="price"
                class="form-control"
                name="listing[price]"
                placeholder="4000"
                required
              />
              <div class="invalid-feedback">Please price should be valid.</div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                id="location"
                class="form-control"
                name="listing[location]"
                placeholder="Pune, maharashtra"
                required
              />
              <div class="invalid-feedback">location should be valid</div>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            id="country"
            class="form-control"
            name="listing[country]"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">country name shoudl be valid</div>
        </div>
        <button class="btn form-add-btn">Add</button>
      </form>
    </div>
  </div>
  <script src="/js/index.js"></script>

